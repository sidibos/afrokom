{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <h1>Shop</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ shop.logo }}</td>
            </tr>
            <tr>
                <th>Banner</th>
                <td>{{ shop.banner }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ shop.active }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ shop.slug }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ shop.currency }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ shop.owner }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('shop_index') }}">back to list</a>

    <a href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>

    {{ include('shop/_delete_form.html.twig') }}
